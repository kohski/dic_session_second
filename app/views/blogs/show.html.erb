<h1>詳細</h1>
<p><%= @blog.title %></p>
<p><%= @blog.content %></p>

<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to "お気に入りを解除する",favorite_path(id: @favorite.id,class:'btn btn-danger') %>
  <% else %>
    <%= link_to 'お気に入りにする',favorites_path(blog_id: @blog.id),method: :post,class:'btn btn-primary'%>
  <% end %>
<% end %>


<%= link_to 'back to index', blogs_path %>